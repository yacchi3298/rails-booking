<h1>部屋一覧</h1>

<% flash.each do |message_type, message| %>
    <div class="notice"><%= message %></div>
<% end %>

<table class="table table-hover">
    <thead>
        <tr>
        <th scope="col">ID</th>
        <th scope="col">施設名</th></th>
        <th scope="col">施設詳細</th>
        <th scope="col">料金</th>
        <th scope="col">住所</th>
        <th scope="col">更新日</th>
        <th scope="col">ゆーざーID</th>
        <th></th>
        <th></th>
        <th></th>
        </tr>
    </thead>
    <tbody>
        <% @rooms.each do |room| %>
        <tr>
            <th scope="row">
                <%=room.id%>
            </th>
            <td>
                <%=room.name%>
            </td>
            <td>
                <%=room.introduction%>
            </td>
            <td>
                <%=room.priice %>
            </td>
            <td>
                <%= room.address%>
            </td>
            <td>
                <%=l room.updated_at, default: '-' %>
            </td>
            <td>
                <%=room.user_id %>
            </td>
            <td>
                <%=link_to("詳細",room_path(room))%>
            </td>
            <td>
                <%=link_to("編集",)%>
            </td>
            <td>
                <%=button_to( "削除", room_path(room), method: :delete, class: "btn btn-primary",form: { data: { turbo_confirm: "削除しますか？" } })%>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
