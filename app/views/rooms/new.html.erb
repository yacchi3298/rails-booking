<div class="container">
    <div class="title">
        <h2>新規登録</h2>
    </div>
    <%=alert %>
    <div class="form-container">
        <%= form_with model: @room do |f| %>

            <div class="form-group">
                <%= f.label :name ,"施設名" %>
                <%= f.text_field :name ,class:"form-control" ,id:"name" %>
            </div>

            <div class="form-group">
                <%= f.label :introduction ,"施設詳細" %>
                <%= f.text_area :introduction , class:"form-control" ,id:"introduction",rows:"5"%>
            </div>

            <div class="form-group">
                <%= f.label :priice ,"料金" %>
                <%= f.number_field :priice , class:"form-control" ,id:"priice"%>
            </div>

            <div class="form-group">
                <%= f.label :address ,"住所" %>
                <%= f.text_field :address ,class:"form-control" ,id:"address" %>
            </div>

            <div class="form-group">
                <%= f.label :image ,"施設写真" %>
                <%= f.file_field :image ,class:"form-control" ,id:"image" %>
            </div>

            <%= f.submit "保存" ,class:"btn btn-primary"%>
        <% end %>
    </div>
</div>